<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudyTests</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="container">
        <header>
            <a asp-controller="Home" asp-action="Index">StudyTests</a>

            <nav>
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <a asp-controller="Account" asp-action="Logout" class="btn btn-outline-secondary">Вийти (@User.Identity.Name)</a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary">Увійти</a>
                }
            </nav>
        </header>
        <main role="main">
            @RenderBody()
        </main>
        <footer>
            <p>&copy; @DateTime.UtcNow.Year - StudyTests</p>
        </footer>
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>
