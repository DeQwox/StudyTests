@model StudyTests.Models.Entities.Question

<h3>@Model.Description</h3>

<form asp-action="Answer" method="post">
    @for (int i = 0; i < Model.Answers.Count; i++)
    {
        <div class="form-check">
            <input class="form-check-input" type="radio" name="selectedAnswer" id="answer@i" value="@i" required />
            <label class="form-check-label" for="answer@i">@Model.Answers[i]</label>
        </div>
    }

    <button type="submit" class="btn btn-primary mt-3">Далі</button>
</form>
